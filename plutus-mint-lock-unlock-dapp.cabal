                     , plutus-ledger
                     , plutus-ledger-api
                     , plutus-ledger-constraints
                     , plutus-script-utils
                     , plutus-tx-plugin
                     , plutus-tx
                     , text
                     , serialise
                     , playground-common
                     , base16-bytestring
                     , cardano-ledger-core
                     , cardano-crypto-class
